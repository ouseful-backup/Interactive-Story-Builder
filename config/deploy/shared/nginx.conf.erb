upstream unicorn_<%= fetch(:full_app_name) %> {
  server unix:/tmp/unicorn_<%= fetch(:full_app_name) %>.sock fail_timeout=0;
}

server {
  listen 80;
  server_name <%= fetch(:server_name) %>;
  root <%= fetch(:deploy_to) %>/current/public;

	proxy_read_timeout <%= fetch(:server_timeout) %>;
	proxy_send_timeout <%= fetch(:server_timeout) %>;


  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @unicorn_<%= fetch(:full_app_name) %>;
  location @unicorn_<%= fetch(:full_app_name) %> {
		##############################################################
		# the following is used to show a maintenance page
		# - simply rename the file maintenance_disable.html to maintenance.html
		#   and this will work
		##############################################################
		if (-f $document_root/maintenance.html) {
		  return 503;
		}

    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://unicorn_<%= fetch(:full_app_name) %>;
  }

	##############################################################
	# the following is used to show a maintenance page
	##############################################################
	error_page 503 @maintenance;
  location @maintenance {
    rewrite ^(.*)$ /maintenance.html break;
  }

  error_page 500 502 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}

<% if fetch(:enable_ssl) %>
